USEMODULE += xtimer
FEATURES_REQUIRED += periph_i2c


CFLAGS += -DLV_HOR_RES_MAX=64
CFLAGS += -DLV_VER_RES_MAX=128
CFLAGS += -DLV_COLOR_DEPTH=1
CFLAGS += -DLV_COLOR_16_SWAP=0
CFLAGS += -DLV_USE_THEME_MONO=1
CFLAGS += -DLV_THEME_DEFAULT_INIT=lv_theme_mono_init
CFLAGS += -DLV_THEME_DEFAULT_FLAG=0

ifeq (,$(findstring -DLV_COLOR_TRANSP, $(CFLAGS)))
CFLAGS += -DLV_COLOR_TRANSP=LV_COLOR_BLACK
endif

ifeq (,$(findstring -DLV_USE_THEME_EMPTY, $(CFLAGS)))
CFLAGS += -DLV_USE_THEME_EMPTY=0
endif

ifeq (,$(findstring -DLV_USE_THEME_TEMPLATE, $(CFLAGS)))
CFLAGS += -DLV_USE_THEME_TEMPLATE=0
endif

ifeq (,$(findstring -DLV_USE_THEME_MATERIAL, $(CFLAGS)))
CFLAGS += -DLV_USE_THEME_MATERIAL=0
endif

ifeq (,$(findstring -DLV_THEME_DEFAULT_COLOR_PRIMARY, $(CFLAGS)))
CFLAGS += -DLV_THEME_DEFAULT_COLOR_PRIMARY=LV_COLOR_WHITE
endif

ifeq (,$(findstring -DLV_THEME_DEFAULT_COLOR_SECONDARY, $(CFLAGS)))
CFLAGS += -DLV_THEME_DEFAULT_COLOR_SECONDARY=LV_COLOR_BLACK
endif

ifeq (,$(findstring -DLV_FONT_UNSCII_8, $(CFLAGS)))
CFLAGS += -DLV_FONT_UNSCII_8=1
endif